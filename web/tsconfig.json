{
   "compilerOptions": {
      "target": "ES2019", //setting higher than 2019 throws an error during build
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true, //required for zen observables
      "sourceMap": true,
      "noEmitOnError": true,
      "strict": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "removeComments": true,
      "paths": {
         "@/*": [
            "src/*"
         ]
      },
      "types": [
         "node",
         "gapi",
         "gapi.auth2",
         "codemirror"
      ],
      "lib": [
         "ES2019",
         "dom",
         "dom.iterable"
      ],
      "plugins": [
         {
            "name": "@vuedx/typescript-plugin-vue"
         }
      ]
   }
}